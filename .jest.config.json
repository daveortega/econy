{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "coveragePathIgnorePatterns": ["src/generated", "index.ts", "dist"],
  "collectCoverage": true,
  "collectCoverageFrom": ["**/*.ts"],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": -10
    }
  },
  "setupFiles": ["<rootDir>/jest.setup.js"]
}
