{
  "compilerOptions": {
    "lib": [
      "es2023"
    ],
    "target": "ES2019",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "declaration": true
  },
  "exclude": ["**/__tests__/**"]
}